<html>
<head>
	<title></title>
<script language="JavaScript">
	var xmldoc = new ActiveXObject("MSXML.DOMDocument");
	xmldoc.async = false;
	xmldoc.load("ex7-6_names4.xml");
	
	// 먼저 해당 노드들을 찾는다.
	var nameNodes = xmldoc.getElementsByTagName("name");
	// var nameNodes = xmldoc.selectNodes("//name"); 이것도 가능
    
	for (var i=0; i<nameNodes.length; i++) {
		// 찾은 녀석들 중에서 attributes 를 찾는다.
		var attr = nameNodes[i].attributes.getNamedItem("first");
		alert(attr.nodeValue);
	}


	// XPATH를 이용해 직접 attribute를 찾기
	var nodes = xmldoc.selectNodes("//@first");
	for (var i=0; i<nodes.length; i++) {
		// 찾은 녀석들 중에서 attributes 를 찾는다.
		alert(nodes[i].nodeValue);
	}

	
</script>
</head>
<body>
</body>
</html>