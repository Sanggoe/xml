<?xml version="1.0"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">

<xsl:template match="/">
	<HTML>
	<HEAD>
		<TITLE>XML 문서의 내용을 테이블 형태로 보여주기</TITLE>
	</HEAD>
	<BODY>
		<people>
			<xsl:apply-templates select="@*"/>
		</people>
	</BODY>
	</HTML>
</xsl:template>

<xsl:template match="@*">
	<xsl:element name="{local-name()}"> <xsl:value-of select="."/> </xsl:element>
</xsl:template>

</xsl:stylesheet>